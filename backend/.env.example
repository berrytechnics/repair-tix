# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
DB_HOST=postgres  # Use 'postgres' when running in Docker, 'localhost' for local development
DB_PORT=5432
DB_NAME=repair_business
DB_USER=repair_admin
DB_PASSWORD=repair_password

# JWT Authentication
JWT_SECRET=your_secure_jwt_secret_key_change_this_in_production
