{
  "name": "circuit-sage",
  "version": "1.0.0",
  "description": "Electronics Repair Business Management System",
  "main": "cli.js",
  "bin": {
    "circuit-sage": "./cli.js"
  },
  "scripts": {
    "link": "chmod +x cli.js && npm link # Link CLI globally to use 'repair-manager' command",
    "unlink": "npm uninstall -g $(node -e \"console.log(require('./package.json').name)\") # Remove global link",
    "reinstall": "npm run unlink && npm run link # Unlink and relink the CLI"
  },
  "keywords": [
    "repair",
    "electronics",
    "business",
    "management"
  ],
  "author": "J. Kyle Berry",
  "dependencies": {
    "commander": "^11.0.0",
    "fs-extra": "^11.3.0"
  }
}
